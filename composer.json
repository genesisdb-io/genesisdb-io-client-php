{
  "name": "genesisdb/client-sdk",
  "description": "PHP SDK for Genesis DB",
  "type": "library",
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.0",
    "cloudevents/sdk-php": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "guzzlehttp/psr7": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "GenesisDB\\GenesisDB\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GenesisDB\\GenesisDB\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
